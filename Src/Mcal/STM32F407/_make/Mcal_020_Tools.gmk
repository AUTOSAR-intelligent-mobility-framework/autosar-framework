
AS      = $(PATH_TOOLS_COMPILER_BIN)/arm-none-eabi-g++.exe         # assembler
CC      = $(PATH_TOOLS_COMPILER_BIN)/arm-none-eabi-g++.exe         # c-compiler
CPP     = $(PATH_TOOLS_COMPILER_BIN)/arm-none-eabi-g++.exe         # c++-compiler
LD      = $(PATH_TOOLS_COMPILER_BIN)/arm-none-eabi-g++.exe         # linker/locator
OBJCOPY = $(PATH_TOOLS_COMPILER_BIN)/arm-none-eabi-objcopy.exe     # absolute object to HEX converter
