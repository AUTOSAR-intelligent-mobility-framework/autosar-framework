READELF = $(PATH_TOOLS_COMPILER_BIN)/arm-none-eabi-readelf.exe     # binary parser
SIZE    = $(PATH_TOOLS_COMPILER_BIN)/arm-none-eabi-size.exe        # Program size calculator

AS             := $(subst /,\,$(AS))
